<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/createUser">Create User</a>
    <a href="/about">About</a>
  </div>

  <h2 class="table-title">List Users</h2>
  <table class="styled-table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Name</th>
        <th>City</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.city %></td>
          <td class="action-buttons">
            <a href="/editUser/<%= user.id %>" class="edit-btn">Edit</a>
            <form action="/deleteUser/<%= user.id %>?_method=DELETE" method="POST" onsubmit="return confirmDelete('<%= user.name %>')">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <script>
   function confirmDelete(userName) {
      return confirm(`Are you sure you want to delete the user ${userName}?`);
    }
  </script>

</body>

</html>